#!/bin/bash -e

repositories="debian-installer debian-pxelinux debian-repo-archive"
url="ssh://git@github.com/xivo-pbx"

if [ ! -d sources ]; then
    mkdir sources
fi

get_repo() {
    if [ -d $repository ]; then
        cd $repository && git pull
        cd -
    else
        git clone $url/$repository
    fi
}

cd sources
for repository in $repositories; do
    get_repo $repository
done
